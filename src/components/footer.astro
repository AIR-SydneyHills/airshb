import config from '../config'
---

<footer class="m-4 rounded-lg bg-white shadow dark:bg-gray-800">
  <div class="mx-auto w-full max-w-screen-xl p-4 md:flex md:items-center md:justify-between">
    <span class="text-sm text-gray-500 dark:text-gray-400 sm:text-center"
      >Â© 2024 <a href="https://flowbite.com/" class="hover:underline">{config.site_name}</a>. All
      Rights Reserved.
    </span>
    <ul
      class="mt-3 flex flex-wrap items-center text-sm font-medium text-gray-500 dark:text-gray-400 sm:mt-0"
    >
      {
        config.nav_menu.map((item) => (
          <li>
            <a href={item.link} class="me-4 hover:underline md:me-6">
